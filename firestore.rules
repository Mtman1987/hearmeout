rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Public rooms are readable by anyone.
    // Private rooms are readable by their owner.
    // Room creation requires authentication.
    // Room updates/deletes are restricted to the owner.
    match /rooms/{roomId} {
      allow read: if resource.data.isPrivate == false || (request.auth != null && request.auth.uid == resource.data.ownerId);
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.ownerId;

      // Rules for room subcollections
      match /users/{userId} {
        // Users can join/leave a room (create/delete their own user document)
        // Anyone in the room can see who else is there.
        allow read: if request.auth != null && exists(/databases/$(database)/documents/rooms/$(roomId)/users/$(request.auth.uid));
        allow create, delete: if request.auth != null && request.auth.uid == userId;
        // The owner of the user document can update their mute status.
        allow update: if request.auth != null && request.auth.uid == userId;
      }

      match /messages/{messageId} {
        // Anyone in the room can read messages.
        allow read: if request.auth != null && exists(/databases/$(database)/documents/rooms/$(roomId)/users/$(request.auth.uid));
        // A user can only create messages as themselves.
        allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
        // A user can only delete their own messages.
        allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
      }
    }

    // User profiles can be read and written only by the owner.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
